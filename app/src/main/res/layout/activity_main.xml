<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textRupiah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Silahkan Masukkan  Nilai Rupiah" />

    <EditText
        android:id="@+id/editRupiah"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="87dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="97dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="111dp">

        <RadioButton
            android:id="@+id/radioDollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dolar" />
        android:layout_alignStart="@+id/radio"
        android:layout_alignTop="@+id/radio"
        android:layout_alignBottom="@+id/radio"
        <RadioButton
            android:id="@+id/radioEuro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/radio"
            android:layout_alignTop="@+id/radio"
            android:layout_alignBottom="@+id/radio"
            android:layout_weight="1"
            android:text="Euro" />

    </RadioGroup>

    <Button
        android:id="@+id/btnOkKonveksi"
        android:layout_width="53dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="213dp"
        android:layout_marginBottom="197dp"
        android:layout_weight="1"
        android:text="OK" />

    <TextView
        android:id="@+id/textHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="164dp"
        android:text="Hasil" />

</RelativeLayout>